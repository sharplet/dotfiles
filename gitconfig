; vim: ft=gitconfig
[diff "strings"]
	textconv = iconv -f utf-16 -t utf-8
[user]
	name = Adam Sharp
	email = adam@sharplet.me
[commit]
	verbose = true
[init]
	defaultBranch = main
[alias]
	co = checkout
	c = commit
	d = diff
	r = rebase
	graph = log --graph --pretty=blame-decorate
	g = graph
	yolo = push --force-with-lease
	cp = cherry-pick
[rebase]
	autostash = true
	autoSquash = true
[pretty]
	blame-decorate = %C(auto)%h %C(auto,cyan)[%aN]%C(reset) %s%C(auto)%d
[color]
	ui = false
	diff = true
