; vim: ft=gitconfig
[core]
	editor = vim +1 -c normal\\ $
	trustctime = false
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
[alias]
	s = status
	c = commit --verbose
	b = branch
	co = checkout
	r = rebase
	d = diff
	dc = diff --cached
	wd = diff --word-diff
	l = log --oneline
	unchanged = update-index --assume-unchanged
	no-unchanged = update-index --no-assume-unchanged
	ld = log --oneline --decorate
	owner = !sh -c \"git blame --line-porcelain \\\"$@\\\" | sed -n \\\"s/^author //p\\\" | sort | uniq -c | sort -rn\"
	unstage = rm --cached
	rmc = rm --cached
	rrmc = rm -r --cached
	cp = cherry-pick
	autosquash = rebase --interactive --autosquash
	yolo = push --force-with-lease
	lsd = ls-files -d
	lsm = ls-files -m
	latest-tag = describe --tags --abbrev=0
	pt = push --tags
	cclone = !hub clone $1
	t = tag
	logf = !git log --ignore-missing ^origin/{master,develop,development} HEAD
	lf = !git logf --oneline
	dd = !git difftool -y --extcmd 'icdiff --highlight --line-numbers'
	intend = add --intent-to-add
	sha = log -1 --pretty=format:%H
	go = !git branch | sed -En 's/^  (.+)$/\\1/p' | selecta | xargs -t git checkout
	g = log --oneline --graph --decorate
	ga = log --all --oneline --graph --decorate
	gf = g --ignore-missing ^origin/master ^origin/develop ^origin/development HEAD
	publish = !git push -u origin $(git branch | sed -n 's/^\\* //p')
	proxy = ![ -n "$PROXY" ] && git config --global http.proxy $PROXY || echo "error: PROXY not set"
	noproxy = config --global --unset http.proxy
	pr = !hub pull-request
	ff = merge --ff-only
	remaster = pull -r origin master
	ap = add --patch
[color]
	diff = true
	ui = false
[color "diff"]
	;meta = yellow bold
	commit = green bold
	frag = magenta
	old = red
	new = green
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red 52
	newNormal = green
	newHighlight = green 22
[user]
	name = Adam Sharp
	email = adsharp@me.com
[rerere]
	enabled = true
[push]
	default = simple
[merge]
	defaultToUpstream = true
[rebase]
	autosquash = true
[hub]
	protocol = https
[init]
	templatedir = ~/.config/git/templates
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[credential]
	helper = osxkeychain
[gitsh]
	gitCommand = /usr/bin/env hub
